<% if book.favorited_by?(current_user) %>
  <p>
    <td><%= link_to book_favorite_path(book), method: :delete, remote: true do %>
        ♥<%= book.favorites.count %>
        <% end %>
    </td>
  </p>
  <% else %>
  <p>
    <td><%= link_to book_favorite_path(book), method: :post, remote: true do %>
        ♡<%= book.favorites.count %>
        <% end %>
    </td>
  </p>
<% end %>